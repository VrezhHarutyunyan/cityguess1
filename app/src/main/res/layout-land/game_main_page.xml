<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:weightSum="2"
    android:background="@color/green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="7dp">


        <TextView
        android:id="@+id/country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/view_text_color"
        android:background="@android:color/transparent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:id="@+id/completed_quizzes_linear">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPLETED QUIZZES:0"
                android:id="@+id/completed_quizzes_text"
                android:background="@drawable/rounded_button_grey"
                android:textColor="@color/view_text_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_answers_linear"
            android:layout_alignLeft="@id/completed_quizzes_linear"
            android:layout_below="@+id/completed_quizzes_linear"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RIGHT ANSWERS: 0"
                android:id="@+id/right_answers_text"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_grey"
                android:textColor="@color/view_text_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrong_answers_linear"
            android:layout_below="@+id/right_answers_linear"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@id/completed_quizzes_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WRONG ANSWERS: 0"
                android:id="@+id/wrong_answers_text"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_grey"
                android:textColor="@color/view_text_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_linear"
            android:layout_below="@+id/wrong_answers_linear"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@id/completed_quizzes_linear">
            <TextView
                android:id="@+id/timer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REMAINED TIME:"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_grey"
                android:textColor="@color/view_text_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timer_count"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_grey"
                android:textColor="@color/view_text_color"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cities"
        android:layout_alignLeft="@id/country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="7dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button_white"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button_white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button_white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button_white"/>

    </LinearLayout>

</LinearLayout>