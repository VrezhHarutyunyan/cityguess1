<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/list_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/relativeLayout_padding"
    android:paddingRight="@dimen/relativeLayout_padding"
    android:paddingTop="@dimen/listView_padding"
    android:paddingBottom="@dimen/listView_padding"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.flycode.customtypefacewidget.CTTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/country_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/listView_text_size"
        android:textColor="@color/black"
        app:typeface="OpenSans-Light.ttf"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/capital_text_view">
    </com.flycode.customtypefacewidget.CTTextView>

    <com.flycode.customtypefacewidget.CTTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/capital_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="@dimen/listView_text_size"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        app:typeface="OpenSans-Light.ttf"
        android:background="@drawable/rounded_item_black"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        >
    </com.flycode.customtypefacewidget.CTTextView>

</LinearLayout>