<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/dialog_rounded_rect"
        android:orientation="vertical" >

        <com.flycode.customtypefacewidget.CTTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/black"
            app:typeface="OpenSans-Bold.ttf"
            android:layout_marginTop="@dimen/achievement_dialog_padding"
            android:paddingLeft="@dimen/achievement_dialog_padding"
            android:paddingRight="@dimen/achievement_dialog_padding"
            android:gravity="center" />

        <com.flycode.customtypefacewidget.CTTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/black"
            app:typeface="OpenSans-Light.ttf"
            android:paddingLeft="@dimen/achievement_dialog_padding"
            android:paddingRight="@dimen/achievement_dialog_padding"
            android:gravity="center" />

        <com.flycode.customtypefacewidget.CTButton
            android:id="@+id/ok"
            android:layout_width="@dimen/game_start_button_width"
            android:layout_height="@dimen/game_start_button_height"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            app:typeface="OpenSans-Bold.ttf"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_margin_top"
            android:layout_marginBottom="@dimen/achievement_dialog_padding"
            android:background="@drawable/rounded_button_green" />

    </LinearLayout>

</RelativeLayout>