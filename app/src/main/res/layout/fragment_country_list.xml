<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/relativeLayout_padding"
    android:background="@color/orange"
    tools:context=".fragments.CountriesListFragment">

    <com.flycode.customtypefacewidget.CTTextView
        android:id="@+id/country_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/listView_padding"
        android:layout_marginBottom="@dimen/relativeLayout_padding"
        android:layout_marginLeft="@dimen/listView_padding"
        android:layout_marginRight="@dimen/listView_padding"
        android:text="@string/country_list"
        android:textSize="31sp"
        app:typeface="OpenSans-Bold.ttf"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <ListView
        android:id="@+id/country_list_view"
        android:layout_below="@id/country_list_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/listView_padding"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_divider_height"
        />

</RelativeLayout>
